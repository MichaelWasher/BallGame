<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michaelwasher.bricker">
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.michaelwasher.bricker.MyApplication"
        >
        <activity
            android:name="com.michaelwasher.bricker.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.michaelwasher.bricker.activities.LevelSelector"
            android:label="@string/title_activity_level_selector"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.michaelwasher.bricker.activities.Game"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.michaelwasher.bricker.activities.EndGame"
            android:label="@string/title_activity_end_game"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>


</manifest>