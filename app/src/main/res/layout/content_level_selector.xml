<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ic_brick_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.michaelwasher.bricker.activities.LevelSelectorActivity"
    tools:showIn="@layout/activity_level_selector"
    >

    <TextView
        android:id="@+id/LevelSelectorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/levelSelectorGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LevelSelectorText">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="1"
            app:starLevel="@integer/level1"
            />

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="2"
            app:starLevel="@integer/level2"
            />

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="3"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="3"
            app:starLevel="@integer/level3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="4"
            app:starLevel="0"
            />

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="5"
            app:starLevel="4"
            />

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:text="6"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="6"
            app:starLevel="4"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="4"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="7"
            app:starLevel="4"
            />

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="5"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="8"
            app:starLevel="4"/>

        <com.michaelwasher.bricker.views.LevelSelector
            android:id="@+id/levelselector9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans"
            app:levelNumber="9"
            app:starLevel="4"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.michaelwasher.bricker.views.LevelSelector
                android:id="@+id/levelselector10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_level_selector_three_star"
                android:text="4"
                android:layout_marginRight="@dimen/level_selector_margin"
                android:layout_marginBottom="@dimen/level_selector_margin"
                android:textSize="30sp"
                android:typeface="sans"
                app:levelNumber="7"
                app:starLevel="4"
                />

            <com.michaelwasher.bricker.views.LevelSelector
                android:id="@+id/levelselector11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_level_selector_three_star"
                android:text="5"
                android:layout_marginRight="@dimen/level_selector_margin"
                android:layout_marginBottom="@dimen/level_selector_margin"
                android:textSize="30sp"
                android:typeface="sans"
                app:levelNumber="8"
                app:starLevel="4"/>

            <com.michaelwasher.bricker.views.LevelSelector
                android:id="@+id/levelselector12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_level_selector_three_star"
                android:layout_marginBottom="@dimen/level_selector_margin"
                android:textSize="30sp"
                android:typeface="sans"
                app:levelNumber="9"
                app:starLevel="4"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
