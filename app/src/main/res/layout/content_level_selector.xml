<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.michaelwasher.bricker.activities.LevelSelector"
    tools:showIn="@layout/activity_level_selector">

    <TextView

        android:id="@+id/LevelSelectorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:text="Select A Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LevelSelectorText">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/levelselector1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="1"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/levelselector2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="2"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/levelselector3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="3"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/levelselector4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="4"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/levelselector5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:text="5"
            android:layout_marginRight="@dimen/level_selector_margin"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:textSize="30sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/levelselector6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_level_selector_three_star"
            android:layout_marginBottom="@dimen/level_selector_margin"
            android:text="6"
            android:textSize="30sp"
            android:typeface="sans" />
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
