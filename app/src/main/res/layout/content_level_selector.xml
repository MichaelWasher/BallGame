<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_level_selector"
    tools:context="com.example.ballgame.activities.LevelSelector">



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select A Difficulty"
        android:id="@+id/LevelSelectorText"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/LevelSelectorEasy"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Normal"
        android:layout_below="@+id/LevelSelectorText"
        android:layout_marginTop="61dp"
        android:layout_alignLeft="@+id/LevelSelectorMedium"
        android:layout_alignStart="@+id/LevelSelectorMedium"
        android:layout_alignRight="@+id/LevelSelectorText"
        android:layout_alignEnd="@+id/LevelSelectorText" />

    <Button
        android:id="@+id/LevelSelectorMedium"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/LevelSelectorHard"
        android:layout_alignStart="@+id/LevelSelectorHard"
        android:layout_alignRight="@+id/LevelSelectorText"
        android:layout_alignEnd="@+id/LevelSelectorText" />

    <Button
        android:id="@+id/LevelSelectorHard"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="You will Lose"
        android:layout_below="@+id/LevelSelectorMedium"
        android:layout_alignLeft="@+id/LevelSelectorText"
        android:layout_alignStart="@+id/LevelSelectorText"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/LevelSelectorText"
        android:layout_alignEnd="@+id/LevelSelectorText" />
</RelativeLayout>
